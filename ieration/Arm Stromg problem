armstrong - sum of individually cube of the digit is = = to the number

#include <iostream>
using namespace std;

int main()
{
    int sum=0,m,  r,i,n;
    cout<<"enter a number";
    cin>>n;
    m=n;
    while(n>0)
    {
        r=n%10;
        n=n/10;
        sum=sum+r*r*r;
    }
    if(sum==m)
    {
        cout<<"armstrong";

    }
    else{
        cout<<"not armstrong";
    }
}
