#include<iostream>
using namespace std;

int main() {
    int n, r;

    // Prompting the user to enter a number
    cout << "Enter a no. ";
    cin >> n;

    // Extracting and printing digits in reverse order
    while (n != 0) {
        r = n % 10;   // Extract the last digit
        n = n / 10;   // Remove the last digit
        cout << r << " ";  // Print the extracted digit
    }

    cout << endl;  // Print a new line at the end

    return 0;
}



output ----
Enter a no. 987654321
1 2 3 4 5 6 7 8 9
