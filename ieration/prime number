#include <iostream>
using namespace std;

int main()
{ int count=0, i,n;
    cout<<"enter a number ";
    cin>>n;
    for(i=1;i<=n;i++)
    {
        if(n % i == 0 )
        {
            count++;
        }
    }
    if(count==2)
    {
        cout<<"its a prime number";

    }
    else
    {
        cout<<"not a prime number";
    }
}



/// we can also werite like below
#include <iostream>
using namespace std;

int main()
{
    int n=18;
    for (int  i = 2; i < n; i++)
    {
        if(n%i==0)
        {
            cout<<"non prime number";
            return 0;
        }
       
    }
    cout<<"number is prime";
    
}
