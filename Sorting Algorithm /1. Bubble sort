#include <iostream>
using namespace std;
void swap(int *x,int *y)
{
    int temp;
    temp=*x;
    *x=*y;
    *y=temp;
}

int main()
{
    int A[7]={100,25,36,8,9,10,78};
    int flag;

    for(int i=0;i<=6;i++)
    {
        flag =0;
        for(int j=0;j<7-1-i;j++)
        {
            if(A[j]>A[j+1])
            {
                swap(&A[j],&A[j+1]);
                flag =1;
            }
        }
        if(flag==0)
        {
            cout<<" array is already sorted "<<endl;
            cout<<"we made is adaptive by using the flag "<<endl;
            break;
        }
        
    }
    cout<<"the sorted array is :"<<endl;
    for(int i=0;i<=6;i++)
    {
        cout<<A[i]<<" ";
    }

}
