#include <iostream>
using namespace std;

class uppermatrix
{
    int size;
    int *A;

public:
    uppermatrix(int n)
    {
        this->size = n;
        A = new int[size * (size + 1) / 2];
    }
    void set(int i, int j, int x)
    {
        if (i <= j)
        {
            int index = j * (j - 1) / 2 + i - 1;
            A[index] = x;
        }
         else
        {
            int index = i * (i - 1) / 2 + j - 1;
            A[index] = x;
        }
    }
    int get(int i, int j)
    {
        if (i <= j)
        {
            int index = j * (j - 1) / 2 + i - 1;
            return A[index];
        }
        else
        {
            int index = i * (i - 1) / 2 + j - 1;
            return A[index];
        }
    }
    void display()
    {
        for (int i = 1; i <= size; i++)
        {
            for (int j = 1; j <= size; j++)
            {
                cout << get(i, j) << " ";
            }
            cout << endl;
        }
    }
};

int main()
{
    int n = 4, x;
    uppermatrix sm(n);

    cout << "Enter the elements of the upper triangular  matrix: " << endl;
    for (int i = 1; i <= n; i++)
    {
        for (int j = 1; j <= n; j++)
        {
            cin >> x;
            sm.set(i, j, x);
        }
    }

    cout << "upper triangular  matrix: " << endl;
    sm.display();

    return 0;
}



//output ---------------------------------------------------------------------------------------------------------------------------------------------

Enter the elements of the upper triangular  matrix:
10 20 30 40
50 60 70 80
90 11 22 33
44 55 66 88
upper triangular  matrix:
10 50 90 44
50 60 11 55
90 11 22 66
44 55 66 88
