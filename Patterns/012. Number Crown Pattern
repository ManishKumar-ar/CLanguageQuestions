#include <iostream>
using namespace std;

void pattern12(int N)
{
    // Outer loop for the number of rows.
    for (int i = 1; i <= N; i++)
    {
        // For printing numbers in increasing order.
        for (int j = 1; j <= i; j++)
        {
            cout << j; // Print the numbers from 1 to i.
        }

        // Calculate the initial number of spaces to print in each row.
        int initialSpaces = 2 * (N - i);

        // Print the spaces before the second set of numbers.
        for (int spaces = 1; spaces <= initialSpaces; spaces++)
        {
            cout << " ";
        }

        // For printing numbers in decreasing order.
        for (int j = i; j >= 1; j--)
        {
            cout << j; // Print the numbers from i to 1.
        }

        // Move to the next row by printing a newline character.
        cout << endl;
    }
}

int main()
{
    // Here, we have taken the value of N as 5.
    // We can also take input from the user.
    int N = 5;
    pattern12(N);

    return 0;
}


//output 
// 1        1
// 12      21
// 123    321
// 1234  4321
// 1234554321
