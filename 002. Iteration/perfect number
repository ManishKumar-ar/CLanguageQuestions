A number which is double when we add all the factors of that number.


#include <iostream>
using namespace std;

int main()
{ int sum=0, i,n;
    cout<<"enter a number ";
    cin>>n;
    for(i=1;i<=n;i++)
    {
        if(n % i == 0 )
        {
          sum=sum+i;
    }
    }
    if(n*2==sum)
    {
        cout<<"perfect number";
    }
    else
    { cout<<"not perfect number";

    }



}
