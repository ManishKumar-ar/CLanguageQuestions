#include <iostream>
using namespace std;

int main()
{
    int rev = 0, r, n=143;
   int num =n;
    

    while (n > 0)
    {
        r = n % 10;
        n = n / 10;
        rev = rev * 10 + r;
    }

    cout << "Original number is " << num << endl;

    cout << "Reverse number is " << rev << endl;

    // Display the word representation of each digit in the reversed number
    while (num > 0)
    {
        r = num % 10;
        num = num / 10;

        switch (r)
        {
        case 0:
            cout << "Zero ";
            break;
        case 1:
            cout << "One ";
            break;
        case 2:
            cout << "Two ";
            break;
        case 3:
            cout << "Three ";
            break;
        case 4:
            cout << "Four ";
            break;
        case 5:
            cout << "Five ";
            break;
        case 6:
            cout << "Six ";
            break;
        case 7:
            cout << "Seven ";
            break;
        case 8:
            cout << "Eight ";
            break;
        case 9:
            cout << "Nine ";
            break;
        }
    }

    return 0;
}



/// output -----------
Original number is 143
Reverse number is 341
Three Four One
