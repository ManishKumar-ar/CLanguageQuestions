// here the space complexity is O ( n ) due to using the extra array
//here the time complexity is O ( n ) due to traverse the whole list


#include <iostream>
using namespace std;

void printArray(int ans[], int n) {
  cout << "The reversed array is:- " << endl;
   for (int i = 0; i < n; i++) {
      cout << ans[i] << " ";
   }
}

void reverseArray(int arr[], int n) {
   int ans[n];
   for (int i = n - 1; i >= 0; i--) {
      ans[n - i - 1] = arr[i];
   }
   printArray(ans, n);
}
int main() {
   int n = 5;
   int arr[] = {10,20,30,40,50};
   reverseArray(arr, n);
   return 0;
}

//output 
// The reversed array is:- 
// 50 40 30 20 10 
