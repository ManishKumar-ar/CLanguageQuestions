
#include <iostream>
#include <array>
using namespace std;

int main()
{

    array<int, 10> arr;
    arr.fill(100);             // fill all the array with initial value 100

    cout << arr.at(5) << endl;    // it will find the value at a particular index

    for (int i = 0; i < 10; i++)
    {
        cout << arr.at(i) << " ";
    }
}

// output
// 100
// 100 100 100 100 100 100 100 100 100 100



