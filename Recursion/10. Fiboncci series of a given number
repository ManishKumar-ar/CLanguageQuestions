#include <iostream>
using namespace std;
int fib(int x)
{
    if (x <= 1)
        return x;
    else
        return fib(x - 2) + fib(x - 1);
}

int main()
{
    int n = 5;
    int result;
    for (int i = 0; i < n; i++)
    {
        result = fib(i);
        cout << fib(i) << " ";
    }
    cout << "\nThe " << n << "th term is : " << result;
}


//output -

// 0 1 1 2 3 
// The 5th term is : 3
