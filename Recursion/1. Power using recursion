#include<iostream>
using namespace std;

 int power(int m, int n)
{ 
    if (n == 0)
        return 1;
    return power(m, n - 1) * m;                             // in this for n = 5 there is 6calls
}


int power1(int m, int n)                                       /// so we implement this fuction to reduce the time complexity 
{
    if (n == 0)
        return 1;
    if (n % 2 == 0)
        return power1(m * m, n / 2);
    return  m * power1(m * m, (n - 1) / 2);
}
int main()
{
    int r = power1(2, 5);
    printf("%d ", r);
    return 0;
}


///output ---------------------------------------------------------------------------------------------------------------------------------------
32
