// how to create an array and how to swap the array elements 

#include <iostream>
using namespace std;

int main()
{
    pair<int, int> p_array[3];

    p_array[0] = {1, 2};
    p_array[1] = {2, 3};
    p_array[2] = {3, 4};

    cout << "Before swap" << endl;
    for (int i = 0; i < 3; i++)
    {
        cout << p_array[i].first << " " << p_array[i].second << endl;
    }

    swap(p_array[0], p_array[2]);

    cout << "After swap" << endl;
    for (int i = 0; i < 3; i++)
    {
        cout << p_array[i].first << " " << p_array[i].second << endl;
    }
}

// output
//Before swap
// 1 2
// 2 3
// 3 4
// After swap
// 3 4
// 2 3
// 1 2
