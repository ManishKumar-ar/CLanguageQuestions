//some more function

#include <iostream>
using namespace std;

int main()
{
    pair<int, string> p ;
    p = {10, "krishan"};

    pair<int, string> &p1 = p ;
    p1.first=1000;

    cout << p.first << " " << p.second;
}
//ouput
// 1000 krishan




