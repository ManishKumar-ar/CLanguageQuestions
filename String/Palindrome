//Palindrome â€“
//A string is said to be palindrome if we reverse the string, it remain same.



#include <iostream>
#include <stdio.h>
using namespace std;

int main() {
    const char *name = "madam";

    int i = 0;
    for (i = 0; name[i] != '\0'; i++) {
        // Loop through the characters until a null character is encountered
    }
    i = i - 1;

    for (int j = 0; i >= j; j++, i--) {
        if (name[j] != name[i]) {
            cout << "not palindrome";
            return 0;
        }
    }

    cout << "string is palindrome";
    return 0;
}
