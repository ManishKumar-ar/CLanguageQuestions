
#include <iostream>
using namespace std;
int main()
{
    int year;
    cout << "Enter a year: ";
    cin >> year;
    if (year % 4 == 0)
    {
        if (year % 100 == 0)
        {
            if (year % 400 == 0)
                cout << year << " is a leap year.";
            else
                cout << year << " is not a leap year.";
        }
        else
            cout << year << " is a leap year.";
    }
    else
        cout << year << " is not a leap year.";
    return 0;
}

// for the leap year  - year that is not ending with 00  then  divided by 4 then it is always a leap year.
// for the leap year  - year that is ending with 00 then  divided by 4 then it may be a leap year or not.
// for example 2100 /4 - not leap year
//for example 2000 /4 - leap year

// for the leap year  - year that is ending with 00 then  divided by 4  and 100 then it may be a leap year or not.
// for example 2100 /4 /100  - not leap year
//for example 2020 /4 /100   - leap year

// for the leap year  - year that is ending with 00 then  divided by 4  and 100 and 400 then it is always a leap year.
//for example 1600 /4 /100  /400 - leap year



