#include <iostream>
#include <string>
#include <algorithm> // For reverse function

using namespace std;

string convertbinary(int n) {
    if (n == 0) return "0"; 

    string res = "";
    while (n > 0) {
        if (n % 2 == 1) res += "1";
        else res += "0";
        n = n / 2;
    }

    reverse(res.begin(), res.end()); 
    return res;
}

int main() {
    int n = 13;
    string result = convertbinary(n);
    cout <<"Binary of "<<n<<" is : " <<result;

    return 0;
}


//output
// Binary of 13 is : 1101
